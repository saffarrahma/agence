{% extends 'CommentaireInscr.html.twig' %}
{% block content %}
<div class="container g-margin-t-o-100--xs g-margin-b-125--xs">
    <div class="row g-row-col--0">
        <div class="col-sm-6">
            <!-- Filter -->
            <div class="wow fadeInLeft" data-wow-duration=".3" data-wow-delay=".4s">
                <div class="g-bg-position--center g-padding-x-30--xs g-padding-x-40--sm g-padding-y-30--xs g-padding-y-40--sm js__tab-eqaul-height-v1">
                    <div class="s-team-v1 g-bg-color--white g-box-shadow__dark-lightest-v2 g-padding-x-30--xs g-padding-x-60--sm g-padding-y-60--xs g-padding-y-80--sm js__tab-eqaul-height-v1">
                        <img class="img-responsive g-width-100-percent--xs img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" alt="Image"
                             style="border-radius: 50%;">
                    </div>
                </div>
            </div>
        </div>
        <!-- End Filter -->

        <div class="col-sm-6">
            <div class="wow fadeInLeft" data-wow-duration=".3" data-wow-delay=".2s">
                <div class=" s-team-v1 g-bg-color--white g-box-shadow__dark-lightest-v2 g-padding-x-30--xs g-padding-x-60--sm g-padding-y-60--xs g-padding-y-80--sm js__tab-eqaul-height-v1" style="margin-top: 8%">
                    <div class="cbp js__grid-tabs">
                        <div class="s-tab__grid-v1-item cbp-item -is-active">
                            <div class="g-margin-b-20--xs">
                                <p class="g-font-size-32--xs g-font-family--playfair">Personel info</p>
                            </div>
                            <div class="portlet-body form ">
                                <form class="form-horizontal"enctype="multipart/form-data" action="" method="POST" role="form">
                                    <div class="form-body col-md-12">
                                        <div class="form-group">
                                            <div class="col-md-12 " style="color:red;">
                                                {{ form_errors(form) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.nom,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom'}} ) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.prenom,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.prenom,{'attr': {'class': 'form-control','placeholder':'Pr√©nom' }} ) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.email,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.email,{'attr': {'class': 'form-control','placeholder':'Commentaire' }} ) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.commentaire,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.commentaire,{'attr': {'class': 'form-control','placeholder':'Commentaire' }} ) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.pathFile,null, {'label_attr': {'class': 'col-md-3 control-label'} }) }}</label>
                                            <div class="col-md-3">
                                                {{ form_widget(form.pathFile ) }}
                                            </div>
                                        </div>
                                        {{ form_rest(form) }}
                                    </div>
                                    <div class="form-actions ">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-info">Enregistrer</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
